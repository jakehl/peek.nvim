{
  "tasks": {
    "run": "deno run --allow-read --allow-write --allow-net --allow-env --allow-run --allow-ffi --unstable app/main.ts",
    "start:dev": "DENO_ENV=development deno task run"
  },
  "compilerOptions": {
    "lib": ["dom", "deno.ns", "deno.unstable"]
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}
